<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_delivery_method_form">
            <field name="name">delivery.method form</field>
            <field name="model">delivery.method</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="code"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_delivery_method_tree">
            <field name="name">delivery.method tree</field>
            <field name="model">delivery.method</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="action_delivery_method" model="ir.actions.act_window">
            <field name="name">运输方式</field>
            <field name="res_model">delivery.method</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{
                }
            </field>
        </record>

        <menuitem id="menu_delivery_method" name="运输方式" parent="sale.menu_sales_config"
                  action="action_delivery_method" sequence="60"/>
    </data>
</odoo>
