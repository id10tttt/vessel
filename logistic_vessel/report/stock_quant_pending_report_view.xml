<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stock_quant_pending_report_form">
            <field name="name">stock.quant.pending.report form</field>
            <field name="model">stock.quant.pending.report</field>
            <field name="arch" type="xml">
                <form create="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="supplier_id" readonly="1"/>
                                <field name="mv" readonly="1"/>
                                <field name="owner_ref" readonly="1"/>
                                <field name="location" readonly="1"/>
                                <field name="warehouse_enter_no" readonly="1"/>
                                <field name="reserved_quantity" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="weight" readonly="1"/>
                                <field name="volume" readonly="1"/>
                                <field name="dimensions" readonly="1"/>
                            </group>
                            <group>
                                <field name="ready_date" readonly="1"/>
                                <field name="arrival_date" readonly="1"/>
                                <field name="pick_up_charge" readonly="1"/>
                                <field name="invoice" readonly="1"/>
                                <field name="packing" readonly="1"/>
                                <field name="your_ref" readonly="1"/>
                                <field name="dest" readonly="1"/>
                                <field name="awb" readonly="1"/>
                                <field name="departure_date" readonly="1"/>
                                <field name="ref" readonly="1"/>
                                <field name="lot_id" readonly="1"/>
                                <field name="package_id" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="stock_in_order" readonly="1"/>
                            </group>
                            <group>
                                <field name="stock_out_order" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_stock_quant_pending_report_tree">
            <field name="name">stock.quant.pending.report tree</field>
            <field name="model">stock.quant.pending.report</field>
            <field name="arch" type="xml">
                <tree create="0">
                    <field name="stock_out_order" invisible="1"/>
                    <field name="id" optional="show"/>
                    <field name="supplier_id" optional="show"/>
                    <field name="mv" optional="show"/>
                    <field name="owner_ref" optional="show"/>
                    <field name="your_ref" optional="show"/>
                    <field name="location" optional="show"/>
                    <field name="warehouse_enter_no" optional="show"/>
                    <field name="reserved_quantity" sum="reserved_qty" optional="show" digits="[16,0]"/>
                    <field name="quantity" sum="qty" digits="[16,0]"/>
                    <field name="weight" optional="show"/>
                    <field name="volume" optional="show"/>
                    <field name="dimensions" optional="show"/>
                    <field name="ready_date" optional="show"/>
                    <field name="arrival_date" optional="show"/>
                    <field name="pick_up_charge" optional="show"/>
                    <field name="invoice" optional="show"/>
                    <field name="packing" optional="hide"/>
                    <field name="dest" optional="show"/>
                    <field name="awb" optional="show"/>
                    <field name="departure_date" optional="show"/>
                    <field name="ref" optional="show"/>
                    <field name="lot_id" optional="hide"/>
                    <field name="package_id" optional="hide"/>
                    <field name="stock_in_order" optional="hide"/>
                    <field name="stock_out_order" optional="hide"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_stock_quant_pending_report_search">
            <field name="name">stock.quant.pending.report search</field>
            <field name="model">stock.quant.pending.report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="mv"/>
                    <field name="owner_ref"/>
                    <field name="your_ref"/>
                    <field name="lot_id" optional="hide"/>
                    <field name="package_id" optional="hide"/>
                </search>
            </field>
        </record>

        <record id="action_view_stock_quant_pending_report" model="ir.actions.act_window">
            <field name="name">Pending</field>
            <field name="res_model">stock.quant.pending.report</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{
                }
            </field>
        </record>
        <record id="model_stock_quant_report" model="ir.actions.server">
            <field name="name">创建出库单</field>
            <field name="model_id" ref="logistic_vessel.model_stock_quant_pending_report"/>
            <field name="binding_model_id" ref="logistic_vessel.model_stock_quant_pending_report"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="code">action = records.stock_quant_stock_out()</field>
        </record>

        <menuitem id="menu_stock_quant_pending" name="Pending" action="action_view_stock_quant_pending_report"
                  parent="stock.menu_stock_root" sequence="90"/>
    </data>
</odoo>
